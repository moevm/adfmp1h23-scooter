<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    >

    <!-- Top bar with "Welcome" label -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/top_bar_color"
        android:padding="16dp">

        <TextView
            android:id="@+id/welcome_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- White view with sign up inputs -->
    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="554dp"
        android:layout_below="@id/top_bar"
        android:layout_centerInParent="true"
        android:layout_marginTop="53dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/sign_up_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@color/input_background"
            android:hint="FullName"
            android:padding="8dp"
            android:textColor="@color/input_text_color"
            android:textColorHighlight="@color/input_text_color"
            android:textColorHint="@color/input_text_color"
            android:textColorLink="@color/input_text_color"
            android:textCursorDrawable="@color/input_text_color" />

        <EditText
            android:id="@+id/username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/input_background"
            android:hint="Username"
            android:padding="8dp"
            android:textColor="@color/input_text_color"
            android:textColorHighlight="@color/input_text_color"
            android:textColorHint="@color/input_text_color"
            android:textColorLink="@color/input_text_color"
            android:textCursorDrawable="@color/input_text_color" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/input_background"
            android:hint="Email"
            android:padding="8dp"
            android:textColor="@color/input_text_color"
            android:textColorHighlight="@color/input_text_color"
            android:textColorHint="@color/input_text_color"
            android:textColorLink="@color/input_text_color"
            android:textCursorDrawable="@color/input_text_color" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/input_background"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/input_text_color"
            android:textColorHighlight="@color/input_text_color"
            android:textColorHint="@color/input_text_color"
            android:textColorLink="@color/input_text_color"
            android:textCursorDrawable="@color/input_text_color" />

        <EditText
            android:id="@+id/confirm_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@color/input_background"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/input_text_color"
            android:textColorHint="@color/input_text_color"
            android:textColorLink="@color/input_text_color"
            android:textCursorDrawable="@color/input_text_color" />

        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            android:text="Sign Up"
            android:textColor="@color/white" />

    </LinearLayout>
</RelativeLayout>
